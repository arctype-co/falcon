{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"geth-node-0.2015-06-23-c",
      "labels":{
         "name":"geth-node-0",
         "role": "geth-node"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"geth-node-0.2015-06-23-c",
         "role": "geth-node"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"geth-node-0.2015-06-23-c",
               "role": "geth-node"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"geth-node-0",
                  "image":"sundbry/etheride-geth:2015-06-23-c",
                  "ports":[
                     { "containerPort":30303 },
                     { "containerPort":8545 }
                  ],
                  "volumeMounts":[
                    {
                      "mountPath": "/home/ethd/eth-data",
                      "name": "eth-data"
                    }
                  ]
               }
            ],
            "volumes":[
              { "name": "eth-data",
                "gcePersistentDisk": {
                  "pdName": "eth-data-0",
                  "fsType": "ext4"
                }
              }
            ]
         }
      }
   }
}
